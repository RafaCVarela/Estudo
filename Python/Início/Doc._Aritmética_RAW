	Exemplo 1 -

x = 0.2 + 0.4

eval(repr(x)) == x
# True

eval(repr(x)) == '0.6'
# False

print(0.2 + 0.4)
# 0.6000000000000001

	Exemplo 2 -

x = (2 + 4) / 10
print(x)
# 0.6
eval(repr(x)) == 0.2 + 0.4
# False

	Exemplo 3 -

.1 + .1 + .1
# 0.30000000000000004
.2 + .2 + .2
# 0.6000000000000001

