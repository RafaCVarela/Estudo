// É um desafio da quinta questão
// Pede dois número e o operador, imprimindo o resultado da operação

#include <stdio.h>
#include <stdlib.h>

int main()
{
    float x, y, r;
    char oper;
    
    printf("\n Digite o primeiro numero: ");
    scanf("%f", &x);
    printf("\n Digite o segundo numero: ");
    scanf("%f", &y);
    
    printf("\n Digite um operador matematico: ");
    scanf(" %c", &oper);
    
    if((oper=='/')&&(y==0)){
        printf("\n Absurdo matematico!!");
    }
    else{
    if(oper=='+'){
       printf("\n A operacao e: %f + %f = %f", x, y, x+y);
    }
    else{
        if(oper=='-'){
            printf("\n A A operacao e: %f - %f = %f", x, y, x-y);
        }
        else{
            if(oper=='*'){
                printf("\n A operacao e: %f * %f = %f", x, y, x*y);
            }
            else{
                if(oper=='/'){
                    printf("\n A operacao e: %f / %f = %f", x, y, x/y);
                }
            }
        }

    }
}
    return 0;
}
