// Escolha sua opção de pagamento

#include <stdio.h>
#include <stdlib.h>

int main()
{
    int x;
    
    printf(" Formas de pagamento:\n  1- A vista.\n  2- Em quatro vezes.\n");
    printf("  3- Cheque para trinta dias.\n  4- Em duas vezes.\n");
    printf("  5- A partir de cinco vezes.\n Entre com sua opcao: ");
    scanf("%d", &x);
    
    switch(x){
        case 1: 
        printf(" Desconto de 20%%\n");
        break;
        
        case 2: case 3: case 4: 
        printf(" Mesmo preco a vista\n");
        break;
        
        case 5: 
        printf(" Juros de 3%% ao mes\n");
        break;
        
        case 6: 
        printf(" Juros de 5%% ao mes\n");
        break;
        
        default: 
        printf(" Opcao invalida\n");
        
    }
    
    return 0;
    
}
