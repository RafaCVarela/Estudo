// a)

// Tabuada do três

#include <stdio.h>
#include <stdlib.h>

int main()
{
    printf("\n Tabuada do 3:\n");
    
    printf("  - 3 x 1 = %d\n  - 3 x 2 = %d\n", 3*1, 3*2);
    printf("  - 3 x 3 = %d\n  - 3 x 4 = %d\n", 3*3, 3*4);
    printf("  - 3 x 5 = %d\n  - 3 x 6 = %d\n", 3*5, 3*6);
    printf("  - 3 x 7 = %d\n  - 3 x 8 = %d\n", 3*7, 3*8);
    printf("  - 3 x 9 = %d\n  - 3 x 10 = %d\n",3*9, 3*10);
    
    return 0;
    
}

// b)

// Digite um número e imprima sua tabuada

#include <stdio.h>
#include <stdlib.h>

int main()
{
    int tab;
    
    printf(" Digite um numero inteiro: ");
    scanf("%d", &tab);
    
    printf("\n Tabuada do %d:\n", tab);
    
    printf("  - %d x 1 = %d\n  - %d x 2 = %d\n", tab, tab*1, tab, tab*2);
    printf("  - %d x 3 = %d\n  - %d x 4 = %d\n", tab, tab*3, tab, tab*4);
    printf("  - %d x 5 = %d\n  - %d x 6 = %d\n", tab, tab*5, tab, tab*6);
    printf("  - %d x 7 = %d\n  - %d x 8 = %d\n", tab, tab*7, tab, tab*8);
    printf("  - %d x 9 = %d\n  - %d x 10 = %d\n", tab, tab*9, tab, tab*10);
    
    return 0;
    
}

// c)

// Com uma estrutura de repetição, digite um número e imprima a sua tabuada

#include <stdio.h>
#include <stdlib.h>

int main()
{
    int tab;
    
    printf(" Digite um numero inteiro: ");
    scanf("%d", &tab);
    
    while(tab!=0){
        
        printf("\n Tabuada do %d:\n", tab);
        printf("  - %d x 1 = %d\n  - %d x 2 = %d\n", tab, tab*1, tab, tab*2);
        printf("  - %d x 3 = %d\n  - %d x 4 = %d\n", tab, tab*3, tab, tab*4);
        printf("  - %d x 5 = %d\n  - %d x 6 = %d\n", tab, tab*5, tab, tab*6);
        printf("  - %d x 7 = %d\n  - %d x 8 = %d\n", tab, tab*7, tab, tab*8);
        printf("  - %d x 9 = %d\n  - %d x 10 = %d\n", tab, tab*9, tab, tab*10);
        
        printf("\n Digite um numero inteiro(digite 0 para sair): ");
        scanf("%d", &tab);
        
    }
    
    return 0;
    
}

// d)

// Tabuada do 1 ao 9

#include <stdio.h>
#include <stdlib.h>

int main()
{
    int tab;
    
    tab = 1;
    
    while(tab>=1 && tab<=9){
        
        printf("\n Tabuada do %d:\n", tab);
        printf("  - %d x 1 = %d\n  - %d x 2 = %d\n", tab, tab*1, tab, tab*2);
        printf("  - %d x 3 = %d\n  - %d x 4 = %d\n", tab, tab*3, tab, tab*4);
        printf("  - %d x 5 = %d\n  - %d x 6 = %d\n", tab, tab*5, tab, tab*6);
        printf("  - %d x 7 = %d\n  - %d x 8 = %d\n", tab, tab*7, tab, tab*8);
        printf("  - %d x 9 = %d\n  - %d x 10 = %d\n", tab, tab*9, tab, tab*10);
        
        tab++;
        
    }
    
    return 0;
    
}
