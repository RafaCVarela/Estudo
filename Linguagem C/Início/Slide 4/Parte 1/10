// Sistema de quantas loja e produtos comprados por loja

#include <stdio.h>
#include <stdlib.h>

int main()
{
    int numeroLojas, numeroItens;
    int cont1=1, cont2=1;
    float precoProduto;
    
    printf("Numero de lojas visitadas: ");
    scanf("%d", &numeroLojas);
    
    while(numeroLojas != 0){
        
        printf("\nNumero de itens comprados na loja %d: ", cont1);
        scanf("%d", &numeroItens);
        
        while(numeroItens > 0){
            
            printf("Digite o valor do item %d: RS ", cont2);
            scanf("%f", &precoProduto);
            
            cont2++;
            numeroItens--;
            
        }
        
        cont2 = 1;
        
        cont1++;
        numeroLojas--;
        
    }
    
    return 0;
}
