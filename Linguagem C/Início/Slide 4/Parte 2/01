// Soma de pre√ßos

#include <stdio.h>
#include <stdlib.h>

int main()
{
    float preco, soma;
    
    soma = 0;
    
    printf(" Digite o preco do produto: ");
    scanf("%f", &preco);
    
    while(preco > 0){
        
        soma = preco + soma;
        
        printf(" Subtotal: %.2f", soma);
        
        printf("\n Digite o preco do produto: ");
        scanf("%f", &preco);
        
    }
    
    printf("\n Valor total: %.2f", soma);
    
    return 0;
}
