// Encontra n√∫meros primos

#include <stdio.h>
#include <stdlib.h>

int main()
{
    int x, cont, r;
    
    printf("Digite um inteiro positivo: ");
    scanf("%d", &x);
    
    for(cont = 2; x > cont; cont++){
        
        r = x%cont;
        
        if(r==0){
            
            printf("\nO numero %d nao e primo.", x);
            break;
            
        }
    }
    
    if(r!=0)
        printf("\nO numero %d e primo.", x);
    if(x==2)
        printf("\nO numero 2 e primo.");
        
    return 0;
}
