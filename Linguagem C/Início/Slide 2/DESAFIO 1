// Invertemos valores

// (versão 1)
#include <stdio.h>
#include <stdlib.h>

int main()
{
    float valor1, valor2, auxiliar;
    
    printf("\n Digite o valor um: ");
    scanf("%f", &valor1);
    
    printf("\n Digite o valor dois: ");
    scanf("%f", &valor2);
    
    auxiliar=valor1;
    valor1=valor2;
    valor2=auxiliar;
    
    printf("\n O valor 1 e: %f", valor1);
    printf("\n O valor 2 e: %f", valor2);
    
    return 0;
}

// (versão 2)
#include <stdio.h>
#include <stdlib.h>

int main()
{
    float valor1, valor2;
    
    printf("\n Digite o valor um: ");
    scanf("%f%f",&valor1);
    
    printf("\n Digite o valor dois: ");
    scanf("%f", &valor2);
    
    // Ao invés de usarmos uma variável auxiliar, em 'printf', invertemos
    printf("\n O valor 1 e: %f", valor2);
    printf("\n O valor 2 e: %f", valor1);
    
    return 0;
}
