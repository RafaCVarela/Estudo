// Imprime quantos dias, horas e minutos tantos segundos tem

// (vers達o 1)

#include <stdio.h>
#include <stdlib.h>

int main()
{
    int segundos, minutos, horas, dias;

    segundos = 200000;
    minutos = segundos / 60;
    horas = minutos / 60;
    dias = horas / 24;

    printf("%d segundos tem:\n", segundos);
    printf("-%d minutos\n", minutos);
    printf("-%d horas\n", horas);
    printf("-%d dias\n", dias);

    return 0;
}

// (vers達o 2)

#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main()
{
    int segundos, minutos, horas, dias;

    setlocale(LC_ALL, "Portuguese");

    segundos = 200000;

    printf("%d segundos s達o:\n", segundos);

    minutos = segundos / 60;
    horas = minutos / 60;
    dias = horas / 24;

    segundos = segundos % 60;
    minutos = minutos % 60;
    horas = horas % 24;

    printf("-%d segundos\n", segundos);
    printf("-%d minutos\n", minutos);
    printf("-%d horas\n", horas);
    printf("-%d dias\n", dias);

    return 0;
}

// (vers達o 3)

#include <stdio.h>
#include <stdlib.h>

int main()
{
    int segundos, minutos, horas, dias;
    
    segundos=200000;
    minutos=segundos/60;
    horas=minutos/60;
    dias=horas/60;
    
    printf("Dias: %d\nHoras: %d\n", dias, horas);
    printf("Minutos: %d\nSegundos: %d", minutos, segundos);
    
    return 0;
}
